{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "downlevelIteration": true,
    "target": "ES2020"
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "vite.config.ts",
    "vitest.config.ts",
    "*.config.ts",
    "*.config.js"
  ]
}
